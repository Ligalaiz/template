mixin Feedback
  section.feedback
    h2.visually-hidden= 'Contacts'
    .container
      .feedback__wrap
        .feedback__contacts
          .feeback__address.address
            p.address__title ADDRESS
            p.address__text Id convallis placerat sit sed duis id amet volutpat quam a, pharetra.
          .feeback__phone.phone
            p.phone__title PHONE
            a.phone__item(href="tel:6281273134321") +62-812-7313-4321
            a.phone__item(href="tel:628170001234") +62-817-000-1234
          .feeback__service.service
            p.service__title ONLINE SERVICE
            a.service__site(href= '#') www.afrianska.com
            a.service__mail(href= "mailto:hello.afrian@gmail.com") hello.afrian@gmail.com
        .feedback__form.form
          form#form
            p.form__title SEND US MESSAGE
            .form__wrap
              label.form__label.form__label--name
                span Full Name
                input.form__field.form__field--name#nameField(type="text" placeholder= "Your Name" autofocus required)
              label.form__label.form__label--email
                span Email
                input.form__field.form__field--email#emailField(type="email" placeholder= "Your Email" pattern="[^ @]*@[^ @]*" required)
              label.form__label.form__label--email
                span Message
                textarea.form__field.form__field--area#descField(name="desc", cols="30", rows="3" placeholder= "Your Message")
            +CommonBtn('SUBMIT', 'form', 'submit')

